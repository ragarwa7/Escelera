<% content_for :top_content do %>
<h1>Listing <%= @role + 's'%></h1>
<%= devise_error_messages! %>

<table>
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th>History</th>
    <th></th>
    <th></th>
  </tr>

  <% if !@users.nil? then @users.each do |user| %>
          <tr>
            <td><%= user.name %></td>
            <td><%= user.email %></td>
            <% if @role == 'user'%>
                <td><%= link_to 'Show', user %></td>
                <td><%= link_to 'Edit', edit_user_path(user) %></td>
            <% end %>
            <% if @role != 'superadmin' %>
              <td><%= link_to 'Delete', user_path(user) , method: :delete, data: { confirm: 'Are you sure?' } %></td>
            <% end %>
          </tr>
      <% end %>
  <% end %>
</table>
    <% if @role != 'user'%>
      <%= link_to "Create New", new_user_path, class: 'btn btn-default btn-sm' %>
    <% end %>
<% end %>
